<div class="row">
    <div class="row">
        <h2>
            Por favor proporciona la información que se te solicita
        </h2>
    </div>
    <form class="col s12" role="form" action="home" method="post">
        <div class="row">
            <div class="input-field col s12">
                <i class="material-icons prefix">public</i>
                <input required name="server" id="server" type="text" class="validate">
                <label for="server">Servidor MySQL</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">verified_user</i>
                <input required name="user" id="user" type="text" class="validate">
                <label for="user">Usuario MySQL</label>
            </div>
            <div class="input-field col s6">
                <i class="material-icons prefix">https</i>
                <input required name="password" id="password" type="password" class="validate">
                <label for="password">Contraseña MySQL</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <i class="material-icons prefix">sd_storage</i>
                <input required name="database" id="database" type="text" class="validate">
                <label for="database">Base de datos</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <button class="btn-large waves-effect waves-light" type="submit" name="action">
                    Instalar
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </div>
    </form>
</div>
