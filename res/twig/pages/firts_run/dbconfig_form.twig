<form class="form-horizontal" role="form" action="/home" method="post">
    <fieldset>
        <!-- Form Name -->
        <legend>Por favor proporciona la información que se te solicita</legend>
        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="server">Servidor</label>  
            <div class="col-md-6">
                <input id="server" name="server" type="text" placeholder="Dirección del servidor de base de datos" class="form-control input-md" required="">
                <span class="help-block">La dirección usada en la conexión MySQL</span>  
            </div>
        </div>
        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="user">Usuario</label>  
            <div class="col-md-6">
                <input id="user" name="user" type="text" placeholder="Nombre de usuario" class="form-control input-md" required="">
                <span class="help-block">El nombre de usuario que se usara en la conexión con la base de datos</span>  
            </div>
        </div>
        <!-- Password input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="password">Contraseña</label>
            <div class="col-md-6">
                <input id="password" name="password" type="password" placeholder="Contraseña de conexión" class="form-control input-md" required="">
                <span class="help-block">Proporciona la contraseña que se usara en la conexión de la base de datos</span>
            </div>
        </div>
        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="database">Base de datos</label>  
            <div class="col-md-6">
                <input id="database" name="database" type="text" placeholder="Nombre de la base de datos" class="form-control input-md" required="">
                <span class="help-block">Nombre de la base de datos usada en la instalación</span>  
            </div>
        </div>
        <!-- Submit button-->
        <div class="form-group"> 
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-lg btn-primary btn-block">Instalar</button>
            </div>
        </div>
    </fieldset>
</form>