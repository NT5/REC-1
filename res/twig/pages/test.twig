{% extends "base.twig" %}
{% block content %}
    <h1>Lista de carreras</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Creado el</th>
                <th>por</th>
            </tr>
        </thead>
        <tbody>
            {% for carrera in rec1.carreras.list %}
                <tr>
                    <td>{{ carrera.getId }}</td>
                    <td>{{ carrera.getName }}</td>
                    <td>{{ carrera.getCreateAt }}</td>
                    <td>{{ carrera.getCreateBy.getFullName }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

